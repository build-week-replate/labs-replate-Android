<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDarkGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryLightGreen</item>
        <item name="colorAccent">@color/colorAccentGray</item>
        <item name="colorButtonNormal">@color/colorAccentDarkGreen</item>
        <item name="android:textViewStyle">@style/PacificoTextViewStyle</item>
        <item name="android:buttonStyle">@style/PacificoButtonStyle</item>
    </style>


    <style name="PacificoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/pacifico</item>
    </style>

    <style name="PacificoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/pacifico</item>
    </style>

</resources>
