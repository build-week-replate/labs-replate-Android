<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraint_layout_volunteer_login_root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Login.LoginVolunteerActivity">


    <ImageView
        android:id="@+id/imageView_volunteer_login_replate_logo"
        android:layout_width="274dp"
        android:layout_height="40dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/replate_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar_volunteer_login"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:indeterminateDrawable="@drawable/progress"
        app:layout_constraintBottom_toTopOf="@id/edit_text_email_volunteer_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_volunteer_login_replate_logo"
        app:layout_constraintVertical_bias="0.828" />

    <EditText
        android:id="@+id/edit_text_email_volunteer_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans"
        android:hint="Email Address"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38" />

    <EditText
        android:id="@+id/edit_text_password_volunteer_login"
        android:layout_width="0dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:fontFamily="@font/open_sans"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_text_email_volunteer_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <Button
        android:id="@+id/button_login_volunteer_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Login"
        app:layout_constraintTop_toBottomOf="@id/edit_text_password_volunteer_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/text_view_sign_up_volunteer_login"
        android:text="Sign Up"
        android:paddingEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_text_password_volunteer_login"
        app:layout_constraintEnd_toEndOf="parent"
        />

</android.support.constraint.ConstraintLayout>