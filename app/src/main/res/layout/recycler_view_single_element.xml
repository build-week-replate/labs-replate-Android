<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recycler_parent_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="3dp">

    <android.support.v7.widget.CardView
        android:id="@+id/recycler_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardCornerRadius="3.5dp"
        app:cardBackgroundColor="@color/colorAccentLightGray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="5dp"
            android:paddingTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/recycler_single_element_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="22dp"
                android:text="Cafe Rio"
                app:layout_constraintBottom_toTopOf="@+id/recycler_single_element_text2"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/recycler_single_element_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/26"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recycler_single_element_text1" />


            <TextView
                android:id="@+id/recycler_single_element_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="12:35pm"
                app:layout_constraintTop_toBottomOf="@id/recycler_single_element_text1"
                app:layout_constraintStart_toEndOf="@id/recycler_single_element_text2" />

            <TextView
                android:id="@+id/recycler_single_element_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please leave the key under the mat"
                app:layout_constraintTop_toBottomOf="@id/recycler_single_element_text2"
                app:layout_constraintStart_toStartOf="parent" />



        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>